# Application Settings
APP_NAME=Paradox Network Application
APP_VERSION=1.0.0
DEBUG=True

# Domain Configuration (Dual-Lane Architecture)
ZERO_RATED_DOMAIN=core.pna.et
NORMAL_DOMAIN=api.pna.et

# Database
DATABASE_URL=postgresql+asyncpg://pna_user:password@localhost:5432/pna_db
REDIS_URL=redis://localhost:6379/0

# Vector Database (Pinecone)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=pna-vectors

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Message Queue (RabbitMQ)
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Ethio Telecom Integration
TELECOM_PARTNER=ethio_telecom
ZERO_RATING_ENABLED=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
PRIORITY_RATE_LIMIT_PER_MINUTE=5

# File Upload
MAX_UPLOAD_SIZE_MB=10
